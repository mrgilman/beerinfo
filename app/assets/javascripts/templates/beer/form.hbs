<form class='well'>
  <h4>Add a Beer</h4>
  <div class="control-group">
    <label class="control-label" for="title">Title</label>
    <div class="controls">
      {{view Ember.TextField valueBinding="view.title"}}
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="abv">ABV</label>
    <div class="controls">
      {{view Ember.TextField valueBinding="view.abv"}}
    </div>
  </div>

  <input type="submit" value="Add" class='btn btn-primary'>
</form>
