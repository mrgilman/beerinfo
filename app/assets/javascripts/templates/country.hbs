<h1>{{title}}</h1>

<ul class='unstyled list-striped'>
  {{#each brewery in breweries}}
    <li>
      {{#link-to "brewery" brewery}}
        <h3>{{brewery.title}}</h3>
      {{/link-to}}
      {{#if brewery.cityState}}
        <h4>{{brewery.cityState}}</h4>
      {{/if}}
    </li>
  {{/each}}
</ul>
